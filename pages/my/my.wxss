/**index.wxss**/
.userinfo {
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  /* margin: 20rpx; */
  text-align: center;
  border-radius: 50%;
  border: 1rpx solid #cccccc;
}

.userinfo-nickname {
  color: #aaa;
}

.sp {
  font-size: 30rpx;
}

.content {
  border-radius: 8px;
  /* overflow: hidden; */
}

text {
  word-break: break-all;
}

/* style="box-shadow:2px 1px 20px 9px #ccc;" */
.image {
  width: 25%;
  height: 60px;
  position: absolute;
  margin-left: 20px;
}


.name {
  font-weight: 599;
  width: 95%;
  position: relative;
  float: right;
  margin-top: 5px;
  display: -webkit-box;
  font-size: 27rpx;
  /* line-height: 40rpx; */
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}